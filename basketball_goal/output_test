#include <Adafruit_NeoPixel.h>
#include <SoftwareSerial.h>
#include <DFRobotDFPlayerMini.h>

// Output pins
const int ledPin = 13;
const int neoPin = 6;

// NeoPixel
const int numPixels = 8;
Adafruit_NeoPixel pixels(numPixels, neoPin, NEO_GRB + NEO_KHZ800);

// DFPlayer
SoftwareSerial mySerial(10, 11); // RX, TX
DFRobotDFPlayerMini myDFPlayer;

void setup() {
  Serial.begin(9600);
  pinMode(ledPin, OUTPUT);

  // NeoPixel
  pixels.begin();
  pixels.clear();
  pixels.show();

  // DFPlayer
  mySerial.begin(9600);
  if (!myDFPlayer.begin(mySerial)) {
    Serial.println("DFPlayer Mini niet gevonden!");
    while(true);
  }
  Serial.println("Output test gestart...");
  myDFPlayer.volume(20);
}

void loop() {
  // -------- LED TEST --------
  Serial.println("LED aan");
  digitalWrite(ledPin, HIGH);
  delay(1000);
  Serial.println("LED uit");
  digitalWrite(ledPin, LOW);
  delay(500);

  // -------- NeoPixel test --------
  for (int i = 0; i < numPixels; i++) {
    pixels.setPixelColor(i, pixels.Color(0, 255, 0)); // Groen
    pixels.show();
    Serial.print("NeoPixel ");
    Serial.print(i);
    Serial.println(" aan");
    delay(500);
  }
  pixels.clear();
  pixels.show();
  delay(500);

  // -------- DFPlayer test --------
  Serial.println("Speel score geluid");
  myDFPlayer.play(1);
  delay(2000); // tijd voor geluid
  Serial.println("Speel miss geluid");
  myDFPlayer.play(2);
  delay(2000);
}
