// Test alle inputs: startknop, IR-beam sensor, piezzo

const int irReceiverPin = 2;
const int platePin = 3;
const int piezzoPin = A0;

void setup() {
  pinMode(irReceiverPin, INPUT);
  pinMode(platePin, INPUT_PULLUP);
  Serial.begin(9600);
}

void loop() {
  int startState = digitalRead(platePin);
  int beamState = digitalRead(irReceiverPin);
  int piezzoValue = analogRead(piezzoPin);

  Serial.print("Startknop: ");
  Serial.print(startState == LOW ? "GEKLIKTE" : "NIET geklikt");
  Serial.print(" | IR-beam: ");
  Serial.print(beamState == HIGH ? "ONDERBROKEN" : "ONDERBROKEN NIET");
  Serial.print(" | Piezzo: ");
  Serial.println(piezzoValue);

  delay(500); // half seconde pauze voor duidelijk lezen
}
